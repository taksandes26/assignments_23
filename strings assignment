my_string_7 = "IamLearningPython"
print(my_string_7[::-1])
#  10. Find the last position of a given substring.
#  Write a program to find the last position of a substring “Emma” in a given string.
my_string_8 = "Emma is a data scientist who knows Python. Emma works at google."
my_substring = "Emma"
new_sub_string = my_string_8.rfind(my_substring)
print("last position of a given substring Emma is", + new_sub_string)


